<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin" tools:context="layout.UpdateActivity">
<LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:id="@+id/scrollView"
        android:layout_weight="0.62">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:id="@+id/textViewUpdate" android:layout_weight="0.17" />
    </ScrollView>

    <ProgressBar style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/progressBar" android:layout_gravity="center_horizontal" />
<LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_weight="0.03" android:weightSum="1">
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Update" android:id="@+id/buttonStart" android:layout_weight="0.4" android:layout_gravity="left" />
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stop Update" android:id="@+id/buttonStop" android:layout_weight="0.4" android:layout_gravity="right" />
</LinearLayout>

</LinearLayout>
</RelativeLayout>